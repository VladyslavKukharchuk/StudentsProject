{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2018",
    "lib": ["ES6"],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "removeComments": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}